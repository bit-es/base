{
    "name": "bit-es/base",
    "description": "This is my bites package base",
    "keywords": [
        "bit-es",
        "base",
        "laravel",
        "filament"
    ],
    "homepage": "https://github.com/bit-es/base",
    "support": {
        "issues": "https://github.com/bit-es/base/issues",
        "source": "https://github.com/bit-es/base"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "bit-es",
            "email": "bit.ecosystem@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "filament/filament": "^3.0",
        "spatie/laravel-package-tools": "^1.15.0"
    },
    "require-dev": {
        "nunomaduro/collision": "^7.9",
        "orchestra/testbench": "^8.0",
        "pestphp/pest": "^2.1",
        "pestphp/pest-plugin-arch": "^2.0",
        "pestphp/pest-plugin-laravel": "^2.0",
        "spatie/laravel-ray": "^1.26"
    },
    "autoload": {
        "psr-4": {
            "Bit-es\\Base\\": "src/",
            "Bit-es\\Base\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Bit-es\\Base\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@php ./vendor/bin/testbench package:discover --ansi",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Bit-es\\Base\\BaseServiceProvider"
            ],
            "aliases": {
                "Base": "Bit-es\\Base\\Facades\\Base"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
